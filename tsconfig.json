      "ES2022",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "target": "ES2022",
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
