{
  "files": [
    "src/main.ts",
    "polyfills.ts"
  ],
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "declaration": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
